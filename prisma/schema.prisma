generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sensors      Sensor[]
}

// many Sensors can have the same topic id - one sensor item for each subscriber
model Sensor {
  id           String @id @default(cuid())
  name         String @default("TruSense ESP32-001")
  topicId      String
  interval     Int?
  minTemp      Int?
  maxTemp      Int?
  minHum       Int?
  maxHum       Int?
  minPres      Int?
  maxPres      Int?
  email        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  subscriberId String
  subscriber   User     @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
}