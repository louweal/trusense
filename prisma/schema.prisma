generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  topics       Topic[]
}

// Each topic corresponds to a sensor
model Topic {
  id           String   @id
  sensorId     String
  minTemp      Int?
  maxTemp      Int?
  minHum       Int?
  maxHum       Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  subscriberId String
  subscriber   User     @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
}